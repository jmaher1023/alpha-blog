<h1 align="center">All Alpha Bloggers</h1>
<div align="center">
  <div class="row">
    <% @users.each do |user| %>
        <div class="col-md-4 listing">
          <div class="well">
          <ul>
            <li>
              <%= link_to gravatar_for(user), user_path(user) %>
            </li>
            <li class="article-title">
              <%= link_to user.username, user_path(user) %>
            </li>
            <li>
              <small><%= pluralize(user.articles.count, "article") if user.articles %></small>
            </li>
            <% if logged_in? and current_user.admin? %>
              <li>
                <%= link_to "Delete User", user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete this user and all their articles?" }, class: "btn btn-xs btn-danger" %>
              </li>
            <% end %>
          </ul>
          </div>
        </div>
    <% end %>
  </div>
  <%= will_paginate %>
</div>